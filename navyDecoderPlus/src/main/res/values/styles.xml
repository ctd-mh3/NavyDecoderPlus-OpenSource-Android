<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!-- 
  // ************************************************************************
  //
  //  Main theme declaration
  //
  // ************************************************************************
  -->
  <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
    <item name="android:typeface">normal</item>
    <item name="android:textStyle">normal</item>
    <item name="android:textSize">@dimen/applicationTheme_textSize</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowTranslucentNavigation">false</item>
    <item name="android:navigationBarColor">@android:color/transparent</item>
  </style>


  <style name="MainDescription">
    <item name="android:background">@color/mainDescription_Background</item>
    <item name="android:textSize">@dimen/mainDescription_textSize</item>
    <item name="android:paddingTop">@dimen/mainDescription_paddingTop</item>
    <item name="android:paddingBottom">@dimen/mainDescription_paddingBottom</item>
    <item name="android:layout_marginTop">@dimen/mainDescription_layoutMarginTop</item>

    <item name="android:gravity">center_horizontal</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/resultDescription_TextColor</item>
  </style>

  <style name="MainDescription.ResultScreen">
    <item name="android:layout_marginTop">@dimen/mainDescriptionResultScreen_layoutMarginTop</item>
  </style>


  <style name="SearchScreenTextView">
    <item name="android:background">@color/searchScreenTextView_Background</item>
    <item name="android:textSize">@dimen/searchScreenTextView_textSize</item>
    <item name="android:textColor">@color/searchScreenTextView_TextColor</item>
  </style>

  <style name="MainDecodeDescription">
    <item name="android:paddingTop">@dimen/mainDecodeDescription_paddingTop</item>
    <item name="android:textColor">@color/mainDecodeDescription_TextColor</item>
    <item name="android:textSize">@dimen/mainDecodeDescription_textSize</item>
    <item name="android:layout_marginLeft">@dimen/mainDecodeDescription_marginLeft</item>
    <item name="android:textStyle">italic|bold</item>
    <item name="android:gravity">left</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="RFASDecodeSpinner">
    <item name="android:textSize">@dimen/rfasDecodeSpinner_textSize</item>
    <item name="android:layout_margin">@dimen/rfasDecodeSpinner_layoutMargin</item>
    <item name="android:gravity">left</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="RFASDecodeSpinnerItem">
    <item name="android:textSize">@dimen/rfasDecodeSpinner_textSize</item>
    <item name="android:layout_margin">@dimen/rfasDecodeSpinner_layoutMargin</item>
    <item name="android:gravity">left</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:padding">@dimen/rfasDecodeSpinner_padding</item>
  </style>

  <style name="DialogButtons">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center_horizontal</item>
    <item name="android:layout_marginRight">15dp</item>
    <item name="android:layout_marginLeft">15dp</item>
    <item name="android:textColor">@color/resultDescription_TextColor</item>
  </style>


  <style name="ResultDescription">
    <item name="android:background">@color/resultDescription_Background</item>
    <item name="android:textColor">@color/resultDescription_TextColor</item>
    <item name="android:paddingLeft">@dimen/resultDescription_paddingLeft</item>
    <item name="android:paddingBottom">@dimen/resultDescription_paddingBottom</item>
    <item name="android:paddingTop">@dimen/resultDescription_paddingTop</item>
    <item name="android:textSize">@dimen/resultDescription_textSize</item>
    <item name="android:textStyle">normal</item>
    <item name="android:gravity">left</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <!-- Not using a theme with Actionbar and xml places a title looking TextView -->
  <style name="DialogStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
    <!-- Used for the title and text -->
    <item name="android:textColorPrimary">@color/raterTextColor</item>
    <!-- Used for the background -->
    <item name="android:background">@color/raterBackgroundColor</item>
    <item name="android:textColor">@color/raterTextColor</item>
  </style>

</resources>